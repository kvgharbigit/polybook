{
  "name": "polybook-monorepo",
  "version": "1.0.0",
  "description": "Language learning book reader with offline translation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter app dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
